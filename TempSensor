//This code is used for testing the LM35 temperature sensor

int val;
int tempPin = A0;

void setup()
{
  Serial.begin(9600);
}
void loop()
{
  val = analogRead(tempPin);
  float mv = ( val / 1024.0) * 5000;
  float cel = mv / 10;
  float farh = (cel * 9) / 5 + 32;

  Serial.print("Temperature: ");
  Serial.print(cel);
  Serial.print("Â°C");
  Serial.println();
  delay(1000);
}
